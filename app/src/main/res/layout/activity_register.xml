<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background001"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户名："
        android:layout_marginLeft="60sp"
        android:layout_marginRight="60sp"
        android:layout_marginTop="110sp"
        android:textSize="20sp"/>
    <EditText
        android:id="@+id/new_user_id"
        android:layout_width="270sp"
        android:layout_height="40sp"
        android:layout_marginLeft="60sp"
        android:layout_marginRight="60sp"
        android:layout_marginTop="10sp"
        android:background="@drawable/ui_text"
        android:textSize="30sp"
        android:singleLine="true"
        android:inputType="textPersonName"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密    码："
        android:layout_marginLeft="60sp"
        android:layout_marginRight="60sp"
        android:layout_marginTop="10sp"
        android:textSize="20sp"/>
    <EditText
        android:id="@+id/new_password_id"
        android:layout_width="270sp"
        android:layout_height="40sp"
        android:layout_marginLeft="60sp"
        android:layout_marginRight="60sp"
        android:background="@drawable/ui_text"
        android:textSize="20sp"
        android:singleLine="true"
        android:layout_marginTop="10sp"
        android:inputType="textPassword"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认密码："
        android:layout_marginLeft="60sp"
        android:layout_marginRight="60sp"
        android:layout_marginTop="10sp"
        android:textSize="20sp"/>
    <EditText
        android:id="@+id/confirm_password"
        android:layout_width="270sp"
        android:layout_height="40sp"
        android:layout_marginLeft="60sp"
        android:layout_marginRight="60sp"
        android:background="@drawable/ui_text"
        android:textSize="20sp"
        android:singleLine="true"
        android:layout_marginTop="10sp"
        android:inputType="textPassword"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/register"
            android:layout_width="100sp"
            android:layout_height="40sp"
            android:layout_marginLeft="60sp"
            android:layout_marginTop="30sp"
            android:background="@drawable/register_bn"
            />
        <ImageButton
            android:id="@+id/back"
            android:layout_width="100sp"
            android:layout_height="40sp"
            android:layout_marginRight="60sp"
            android:layout_marginLeft="70sp"
            android:layout_marginTop="30sp"
            android:background="@drawable/return_bn"/>
    </LinearLayout>


</LinearLayout>
